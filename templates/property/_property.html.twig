<div class="card mb-4">
    {% if property.filename %}
        <img src="{{ vich_uploader_asset(property, 'imageFile') }}" alt="" class="card-img-top" style="width: 100%; height: auto">
        
    {% else %}
        <img src="{{ '/images/properties/empty.jpg' }}" alt="" class="card-img-top" style="width: 100%; height: auto">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
                {{ property.title }}
            </a>
        </h5>
        <p class="card-text">
            {{ property.surface }} mÂ² ~ {{ property.city}} {{ property.postalcode }}
        </p>

        <div class="text-primary" style="font-size: 2rem; font-weight: bold;">
            {{ property.formattedPrice }} UM
        </div>
    </div>
</div>
